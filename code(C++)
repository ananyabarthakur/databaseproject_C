void modifyclub()
{
  fstream f1("club.dat",ios::in|ios::out|ios::binary);
  club p1;
  int id;
  cout<<"\n Enter ClubId ";
  cin>>id;
  while(f1.read((char *)&p1,sizeof(p1)))
  {
    if(p1.retclubid()==id)
    {
      p1.change();
      f1.seekp(f1.tellp()-sizeof(p1));
      f1.write((char*)&p1,sizeof(p1));
    }
  }
}


void searchgolfer()
{
  int opt;
  do
  {
    clrscr();
    cout<<"\n1.on Gid "<<endl;
    cout<<"\n2.on GolferName "<<endl;
    cout<<"\n3.on Handicap "<<endl;
    cout<<"\n4.on Ranking "<<endl;
    cout<<"\n5.Exit "<<endl;
    cout<<"\n Enter option ";
    cin>>opt;
    switch(opt)
    {
      case 1:
        search_golferid();
        break;
      case 2:
        search_name();
        break;
      case 3:
        search_handicap();
        break;
      case 4:
        search_ranking();
        break;
    }
    cout<<"\n\n\n\t press any key to continue....";
    getch();
  }while(opt!=5);
}

