    cout<<"\n\n\n\t press any key to continue....";
    getch();
  }while(opt!=5);
}

void golferdetail()
{
  int opt;
  do
  {
    clrscr();
    cout<<"\n1.Display Clubs "<<endl;
    cout<<"\n2.search clubID "<<endl;
    cout<<"\n3.search clubName "<<endl;
    cout<<"\n4.search Club Location "<<endl;
    cout<<"\n5.search Club ratings "<<endl;
    cout<<"\n6.search Golfer ";
    cout<<"\n7.Modify Gulfer "<<endl;
    cout<<"\n8.Logout "<<endl;
    cout<<"\n Enter option ";
    cin>>opt;
    switch(opt)
    {
      case 1:
        readclub();
        break;

      case 3:
        search_clubid();
        break;
      case 4:
        search_clubname();
        break;
      case 5:
        searchrating();
        break;
      case 6:
        searchgolfer();
        break;
      case 7:
        modifygolfer();
        break;
    }
    cout<<"\n\n\n\t press any key to continue....";
    getch();
  }while(opt!=8);
}


void login()
{
  fstream f1("golfer.dat",ios::in|ios::binary);
  golfer p1;
  char pname[100];
  int pid;
  cout<<"\n Enter Pid ";
  cin>>pid;
  cout<<" Enter GolferName ";
  cin>>pname;
  int x=0;
  while(f1.read((char *)&p1,sizeof(p1)))
  {
    if(strcmpi(p1.retname(),pname)==0 && p1.retid()==pid)
    {
      x=1;
      clrscr();
      cout<<"\n\t\t\t Golfer Details "<<endl;
      p1.dispinfo();
      cout<<"\n\n\t Press any key ";
      getch();
      golferdetail();
    }
  }
  if(x==0)
    cout<<" Invalid Login ";
  f1.close();
}

void loginclub()
{
  fstream f1("club.dat",ios::in|ios::binary);
  club p1;
  char pass[100];
  int cid;
  cout<<"\n Enter ClubId ";
  cin>>cid;
  cout<<" Enter Password ";
  cin>>pass;
  int x=0;
  while(f1.read((char *)&p1,sizeof(p1)))
  {
    if(strcmpi(p1.retpass(),pass)==0 && p1.retclubid()==cid)
    {
      x=1;
      clrscr();
      cout<<"\n\t\t\t Club Details "<<endl;
      p1.dispinfo();
      cout<<"\n\n\t Press any key ";
      getch();
      clubdetail();
    }
  }
  if(x==0)
    cout<<" Invalid Login ";
  f1.close();
}


void main()
{
  int opt;
  do
  {
    clrscr();
    cout<<"\n***************** Main Menu*****************\n";
    cout<<"\n\t\t1.Clubs "<<endl;
    cout<<"\n\n\t\t2.Golfers "<<endl;
    cout<<"\n\n\t\t Enter option ";
    cin>>opt;
    switch(opt)
    {
      case 1:
        clrscr() ;
        int x;
        cout<<"\n\n\n\t\t 1.New Club Registration ";
        cout<<"\n\t\t 2.Registered Club ";
        cout<<"\n\t\t Enter option ";
        cin>>x;
        if(x==1)
        {
          clrscr() ;
          addclub();
        }
        else if(x==2)
        {
          clrscr();
          loginclub();
        }
        break;
    case 2:
      clrscr();
      cout<<"\n\n\n\t\t 1.New Golfer Registration ";
      cout<<"\n\t\t 2.Registered Golfer ";
      cout<<"\n\t\t Enter option ";
      cin>>x;
      if(x==1)
      {
        clrscr() ;
        addgolfer();
      }
      else if(x==2)
      {
        clrscr();
        login();
      }
      break;
    default:
      if(opt!=3)
        cout<<" Invalid ";
    }
    cout<<"\n\n\n\t press any key to continue....";
    getch();
  }while(opt!=3);
}
